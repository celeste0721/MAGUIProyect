<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaguiProyecto.MostrarRanked"
             WidthRequest="310"
             HeightRequest="500"
             >

    <ScrollView>
        <Grid>
            <!-- Row 0: Imagen -->

            <Image Grid.Row="1" Source="fondoranked.png" Aspect="AspectFill" />

            <!-- Row 1: Contenido -->
            <StackLayout Grid.Row="1" VerticalOptions="CenterAndExpand" Margin="0,100,0,0" >

                <!-- Label para mostrar la primera propiedad -->
                <Label x:Name="lblPropiedad1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
